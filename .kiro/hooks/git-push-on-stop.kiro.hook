{
  "enabled": true,
  "name": "AI完成后Git推送",
  "description": "当AI修改文件之后，触发推送，提交命令",
  "version": "1",
  "when": {
    "type": "agentStop"
  },
  "then": {
    "type": "runCommand",
    "command": "git add -A && git commit -m \"Auto commit by Kiro\" && git push"
  },
  "workspaceFolderName": "ice-excel",
  "shortName": "git-push-on-stop"
}